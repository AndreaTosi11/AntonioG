@page
@model RegisterConfirmationModel
@{
	ViewData["Title"] = "Register confirmation";
}

<head>
	<meta charset="utf-8" />
	<title>@ViewData["Title"] - Home</title>
	<link rel="stylesheet" href="/css/create-edit.css" />
	<link rel="stylesheet" href="/css/menuEfooter.css" />
	<link rel="stylesheet" href="/css/media.css" />
</head>

<body>
	<div class="container">
		<h1>@sharedResource["RegisterConfirmation"]</h1>
		<div class="row">
			<div class="btl">
				<a class="nav-link-back" href="mailto:Check@Your.Mail?subject=Feedback&body=CheckYourInboxMail">@sharedResource["CheckMail"]</a>
			</div>
			<div class="form-group">
				@{
					if (@Model.DisplayConfirmAccountLink)
					{
						<p>
							This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
							Normally this would be emailed.
						</p>
					}
					else
					{
						<p>
							Please check your email to confirm your account.
						</p>
					}
				}
			</div>
		</div>
	</div>
</body>