@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Home</title>
    <link rel="stylesheet" href="/css/create-edit.css" />
    <link rel="stylesheet" href="/css/menuEfooter.css" />
    <link rel="stylesheet" href="/css/media.css" />
</head>

<body>
    <div class="container">
        <h1>@sharedResource["Accesso"]</h1>
        <div class="row">
            <section>
                <form id="account" method="post">
                    <div class="formCenter">
                        <div class="btl">
                            <a class="nav-link-back" asp-area="Identity" asp-page="/Account/Register">@sharedResource["CreaAccount"]</a>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email" class="form-label">@sharedResource["e-MailUtente"]</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="form-label">@sharedResource["PasswordUtente"]</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.RememberMe" class="form-label">
                                @sharedResource["Ricordami"]
                                <br />
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                            </label>
                        </div>
                        <div class="form-left">
                            <a asp-page="./ForgotPassword" class="nav-link-back">@sharedResource["PasswordDimenticata?"]</a> <br />
                        </div>
                        <div class="form-submit">
                            <input id="login-submit" type="submit" value="@sharedResource["Accesso"]" class="btn-submit" />
                        </div>
                    </div>
                </form>
            </section>
        </div>
