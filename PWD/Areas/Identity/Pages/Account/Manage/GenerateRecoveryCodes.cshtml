@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Generate two-factor authentication (2FA) recovery codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Home</title>
	<link rel="stylesheet" href="/css/create-edit.css" />
    <link rel="stylesheet" href="/css/menuEfooter.css" />
    <link rel="stylesheet" href="/css/media.css" />
</head>

<body>
    <div class="container">
<h2>@sharedResource["GeneraICodiciDiRecuperoAutenticazioneADueFattori"]</h2>
<div class="form-group" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@sharedResource["Salva questi codici in un posto sicuro."]Put these codes in a safe place.</strong>
    </p>
    <p>
        @sharedResource["Se perdi il tuo dispositivo e non dovessi disporre di un codice di recupero, perderai láccesso al tuo account."]
    </p>
    <p class="curvedUnderline">
        @sharedResource["Generando un nuovo codice di recupero, non cambierebbero la chiave geerata dall'app di autenticazione. Se preferisci cambiare la chiave usata nell'app di autenticazione, dovresti"]
        <a class="navMA" asp-page="./ResetAuthenticator">@sharedResource["ReimpostaLeTueChiaviDiAutenticazione"]</a>
    </p>
</div>
<div class="row">
    <form method="post">
        <div class="formCenter">
            <div class="form-submit">
        <button class="btn-submit" type="submit">@sharedResource["GeneraICodiciDiRecupero"]</button>
        </div>
        </div>
    </form>
    </div>
</div>
</body>