@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Home</title>
	<link rel="stylesheet" href="/css/create-edit.css" />
    <link rel="stylesheet" href="/css/menuEfooter.css" />
    <link rel="stylesheet" href="/css/media.css" />
</head>

<body>
    <div class="container">
        <div class="row">
    <partial name="_StatusMessage" for="StatusMessage" />
        <form class="form" id="profile-form" method="post">
            <div class="formCenter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="form-label">@sharedResource["NomeUtente"]</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber" class="form-label">@sharedResource["TelefonoUtente"]</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-submit">
                <button id="update-profile-button" type="submit" class="btn-submit">@sharedResource["Salva"]</button>
            </div>
            </div>
        </form>
        </div>
</div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
