@model ProjectWorkDemo.Models.Fornitori

@{
    ViewData["Title"] = "Anagrafica Fornitore";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Home</title>
    <link rel="stylesheet" href="/css/details-delete.css" />
    <link rel="stylesheet" href="/css/menuEfooter.css" />
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <link rel="stylesheet" type="text/css" href="/css/map.css" />
</head>

<body>
    <div class="container">
        <h1>@sharedResource["DettagliFornitore"]</h1>
        <div class="form">
            <div class="formCenter">
                <div class="btl">
                    <a class="nav-link-back" asp-controller="Home" asp-action="Index"> Torna al Menu  </a>
                </div>
                <div class="head-body">
                    <dl>
                        <dt class="col-sm-2">
                            @sharedResource["NomeDitta"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NomeDitta)
                        </dd>
                        <dt class="col-sm-2">
                            UserId
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UserId)
                        </dd>
                        <dt class="col-sm-2">
                            @sharedResource["DataDiCreazione"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DataCreazione)
                        </dd>
                        <dt class="col-sm-2">
                            @sharedResource["Telefono"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>
                        <dt class="col-sm-2">
                            @sharedResource["Indirizzo"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Indirizzo)
                        </dd>
                        <dt class="col-sm-2">
                            @sharedResource["PartitaIVA"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Piva)
                        </dd>
                        @*        <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Lavorazioni)
                        </dt>
                        <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Lavorazioni)
                        </dd>*@
                        <dt class="col-sm-2">
                            @sharedResource["Latitudine"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Latitudine)
                        </dd>
                        <dt class="col-sm-2">
                            @sharedResource["Longitudine"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Longitudine)
                        </dd>
                    </dl>
                </div>
                <div class="formMaps" id="map">
                <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAFTXnc0ewkLNyjLZKYOq288Gan9GoPlIc&callback=initMap" async defer></script>
                </div>
                <div class="btl">
                    <a class="nav-link-back" asp-action="Edit" asp-route-id="@Model?.IdFornitori">@sharedResource["Modifica"]</a>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    var Longitudine = @Html.Raw(ViewBag.Longitudine);
    var Latitudine = @Html.Raw(ViewBag.Latitudine);
    var map;
    function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: Latitudine, lng: Longitudine },
            zoom: 15,
        });

        var marker = new google.maps.Marker({
            position: { lat: Latitudine, lng: Longitudine },
            map: map
        });
    }
</script>