@model ProjectWorkDemo.Models.Fornitori

@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Home</title>
    <link rel="stylesheet" href="/css/details-delete.css" />
    <link rel="stylesheet" href="/css/menuEfooter.css" />
</head>

<body>
    <div class="container">
        <h1>@sharedResource["CancellaFornitore"]</h1>
        <div class="form">
            <div class="formCenter">
                <div class="btl">
                    <a class="nav-link-back" asp-action="Index">@sharedResource["TornaAllaLista"]</a>
                </div>
                <div class="head-body">
                    <dl>
                        <dt class="col-sm-2">
                            @sharedResource["NomeDitta"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NomeDitta)
                        </dd>
                        <dt class="col-sm-2">
                            UserId
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.UserId)
                        </dd>
                        <dt class="col-sm-2">
                            @sharedResource["DataDiCreazione"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DataCreazione)
                        </dd>
                        <dt class="col-sm-2">
                            @sharedResource["Telefono"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>
                        <dt class="col-sm-2">
                            @sharedResource["Indirizzo"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Indirizzo)
                        </dd>
                        <dt class="col-sm-2">
                            @sharedResource["PartitaIVA"]
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Piva)
                        </dd>
                        @*        <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Lavorazioni)
                        </dt>
                        <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Lavorazioni)
                        </dd>*@
                        @* <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.IdTipoFornNavigation)
                        </dt>
                        <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.IdTipoFornNavigation.Descrizione)
                        </dd>*@
                    </dl>
                    <p class="question">@sharedResource["SeiSicuroDiVolerCancellare?"]</p>
                </div>
                <div class="form-submit">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdFornitori" />
                        <input type="submit" value="@sharedResource["Cancella"]" class="btn-submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
