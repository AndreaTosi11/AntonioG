@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Create";
}

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Home</title>
    <link rel="stylesheet" href="/css/create-edit.css" />
    <link rel="stylesheet" href="/css/menuEfooter.css" />
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <link rel="stylesheet" type="text/css" href="/css/map.css" />
    <script type="module" src="/js/mapCreate.js"></script>
</head>

<body>
    <div class="container">
        <h1>@sharedResource["Create Role"]</h1>
        <div class="row">
            <form class="from" asp-action="Create">
                <div class="formCenter">
                    <div class="btl">
                        <a class="nav-link-back" asp-action="Index">@sharedResource["TornaAllaLista"]</a>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">@sharedResource["NomeUtente"]</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger">@TempData["ErrorMes"]</span>
                    </div>
                    <div class="form-submit">
                        <input type="submit" value="@sharedResource["Crea"]" class="btn-submit" />
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
